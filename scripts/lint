#!/bin/bash

# Go linting script using golangci-lint
# This script runs comprehensive linting on the Go codebase

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Configurable packages - modify this variable when extracting info package
PACKAGES="${PACKAGES:-treex infofile}"

echo -e "${BLUE}üîç Running Go linting with golangci-lint for packages: ${PACKAGES}...${NC}"

# Check if golangci-lint is installed
if ! command -v golangci-lint &>/dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  golangci-lint not found. Installing...${NC}"

    # Install golangci-lint
    if command -v brew &>/dev/null; then
        echo -e "${BLUE}Installing via Homebrew...${NC}"
        brew install golangci-lint
    else
        echo -e "${BLUE}Installing via curl...${NC}"
        curl -sSfL https://raw.githubusercontent.com/golangci/golangci-lint/master/install.sh | sh -s -- -b $(go env GOPATH)/bin latest
    fi
fi

# Build lint patterns for configured packages
LINT_PATTERNS=""
for PACKAGE in $PACKAGES; do
    if [[ "$PACKAGE" == "treex" ]]; then
        LINT_PATTERNS="$LINT_PATTERNS ./treex/..."
    elif [[ "$PACKAGE" == "infofile" ]]; then
        LINT_PATTERNS="$LINT_PATTERNS ./infofile/..."
    fi
done

# Add cmd and root level if treex is included
if [[ "$PACKAGES" == *"treex"* ]]; then
    LINT_PATTERNS="$LINT_PATTERNS ./cmd/..."
fi

# Run golangci-lint
echo -e "${BLUE}Running linting checks...${NC}"

# Run with configuration
if golangci-lint run --timeout=5m $LINT_PATTERNS; then
    echo -e "${GREEN}‚úÖ All linting checks passed!${NC}"
    exit 0
else
    echo -e "${RED}‚ùå Linting issues found. Please fix the issues above.${NC}"
    exit 1
fi
